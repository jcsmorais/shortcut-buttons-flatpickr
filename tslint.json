{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "interface-over-type-literal": false,
        "no-namespace": false,
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "whitespace": [
            true,
            "check-module"
        ]
    },
    "linterOptions": {
        "exclude": [
            "dist/*",
            "node_modules/*"
        ]
    },
    "rules": {
        "interface-over-type-literal": false,
        "no-namespace": false,
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "whitespace": [
            true,
            "check-module"
        ]
    },
    "rulesDirectory": []
}
